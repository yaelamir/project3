<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/head') %>
    <script src="https://connect.soundcloud.com/sdk/sdk-3.0.0.js"></script>
    <script src="http://code.jquery.com/jquery-2.2.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.6.1/lodash.js"></script>
</head>
<body>
  <%- include('../partials/header', {subHeading: 'Welcome '}) %>

  <main>

    <form id="searchbox">
      <input type="text" id="search" placeholder="Search">
      <input type="submit" value="Search">
    </form>
    <section id="searchResults">
    </section>

    <br>

    <section class="right">
      <% if (user) { %>
        <div>
          <%= user.soundcloud_username %>
          &nbsp;&nbsp;
          <a href="/auth/logout">Logout</a>
        </div>
        <div class="plbar">
            <% user.playlists.forEach(function(pl) { %>
              <h3><%= pl.title %></h3>
              <p><%= pl.songs %></p>
            <% }); %>
        </div>
      <% } else { %>
        <div><a href="/auth/soundcloud">Login with Soundcloud</a></div>
      <% } %>
    </section>
  </main>
  <%- include('../partials/scripts') %>
</body>
</html>
