<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/head') %>
    <script src="https://connect.soundcloud.com/sdk/sdk-3.0.0.js"></script>
    <script src="http://code.jquery.com/jquery-2.2.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.6.1/lodash.js"></script>
</head>
<body>
  <%- include('../partials/header', {subHeading: 'Welcome'}) %>

  <main>
    <ul class="right">
      <% if (user) { %>
      <li><a href="/auth/logout">Logout</a></li>
      <li><%= user.soundcloud_username %></li>
      <li>playlists<%= user.playlists %></li>
      <% } else { %>
      <li><a href="/auth/soundcloud">Login with Soundcloud</a></li>
      <% } %>
    </ul>
    <form id="searchbox">
      <input type="text" id="search" placeholder="Search">
      <input type="submit" value="Search">
    </form>
    <ul id="searchResults">
    </ul>
  </main>

  <%- include('../partials/scripts') %>
</body>
</html>
